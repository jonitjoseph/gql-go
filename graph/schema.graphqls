# GraphQL schema

type Book {
  id: Int!
  title: String!
  author: String!
  publisher: String!
}

type Query {
  GetAllBooks: [Book!]!
  GetOneBook(id: Int!): Book! 
}

input BookInput {
  title: String!
  author: String!
  publisher: String!
}

type Mutation {
  CreateBook(input: BookInput!): Book!
  DeleteBook(id: Int!): String!
  UpdateBook(id: Int!, input: BookInput!): String!
}
